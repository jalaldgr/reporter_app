<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    app:barrierDirection="right"
    tools:context=".UserInterfaceClass.SubmitInformationActivity"
    android:theme="@style/Theme.AppCompat.Light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/news_main_titr_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:minHeight="85dp"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:weightSum="0">

                <TextView
                    android:id="@+id/news_main_titr_textview_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:text="رو تیر خبر"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_main_titr_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="27dp"
                        android:paddingRight="9dp"
                        android:paddingBottom="9dp" />

                </LinearLayout>

                <View
                    android:id="@+id/divider1"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#73646464"
                    android:minWidth="500dp"
                    android:padding="80dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/news_titr_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:minHeight="85dp"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:weightSum="0">

                <TextView
                    android:id="@+id/news_titr_textView_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:text="تیر خبر"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_titr_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/SubmitInformationTitleHint"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="27dp"
                        android:paddingRight="9dp"
                        android:paddingBottom="9dp" />

                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#73646464"
                    android:minWidth="500dp"
                    android:padding="80dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/news_sub_titr_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:minHeight="85dp"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:weightSum="0">

                <TextView
                    android:id="@+id/news_sub_titr_textView_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:text="زیر تیر خبر"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_sub_titr_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="زیر تیتر"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="27dp"
                        android:paddingRight="9dp"
                        android:paddingBottom="9dp" />

                </LinearLayout>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#73646464"
                    android:minWidth="500dp"
                    android:padding="80dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/news_categori_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:minHeight="85dp"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:weightSum="0">

                <TextView
                    android:id="@+id/news_categori_textView_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:text="سرویس خبری"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_categori_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/SubmitInformationCategoryHint"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="27dp"
                        android:paddingRight="9dp"
                        android:paddingBottom="9dp" />

                </LinearLayout>

                <View
                    android:id="@+id/divider4"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#73646464"
                    android:minWidth="500dp"
                    android:padding="80dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/news_image_layout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
          >

                <Button
                    android:id="@+id/news_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:text="بارگذاری تصویر" />

               />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/news_image_view"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_menu_gallery" />

                </LinearLayout>

                <View
                    android:id="@+id/divider9"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#73646464"
                    android:minWidth="500dp"
                    android:padding="80dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/news_province_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:minHeight="85dp"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:weightSum="0">

                <TextView
                    android:id="@+id/news_province_textView_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:text="استان"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_province_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/SubmitInformationProvinceHint"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="27dp"
                        android:paddingRight="9dp"
                        android:paddingBottom="9dp"
                        android:text="" />

                </LinearLayout>


                <View
                    android:id="@+id/divider5"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#73646464"
                    android:minWidth="500dp"
                    android:padding="80dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp" />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/news_city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:minHeight="85dp"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:weightSum="0">

                <TextView
                    android:id="@+id/news_city_textView_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:text="شهر"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_city_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/SubmitInformationCityHint"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="27dp"
                        android:paddingRight="9dp"
                        android:paddingBottom="9dp"
                        android:text="" />

                </LinearLayout>

                <View
                    android:id="@+id/divider8"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#73646464"
                    android:minWidth="500dp"
                    android:padding="80dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp" />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/news_person_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:minHeight="85dp"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:weightSum="0">

                <TextView
                    android:id="@+id/news_person_textView_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:text="خبرنگار"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_person_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/SubmitInformationUsernameHint"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="27dp"
                        android:paddingRight="9dp"
                        android:paddingBottom="9dp"
                       />

                </LinearLayout>

                <View
                    android:id="@+id/divider6"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#73646464"
                    android:minWidth="500dp"
                    android:padding="80dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/news_type_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:minHeight="85dp"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:weightSum="0">

                <TextView
                    android:id="@+id/news_type_textView_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:text="نوع خبر"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_type_textView_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/SubmitInformationNewsTypeHint"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="27dp"
                        android:paddingRight="9dp"
                        android:paddingBottom="9dp" />

                </LinearLayout>

                <View
                    android:id="@+id/divider7"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#73646464"
                    android:minWidth="500dp"
                    android:padding="80dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/news_summary_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:minHeight="85dp"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:weightSum="0">

                <TextView
                    android:id="@+id/news_summary_textView_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:text="خلاصه خبر"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_summary_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/SubmitInformationSummaryHint"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="27dp"
                        android:paddingRight="9dp"
                        android:paddingBottom="9dp" />

                </LinearLayout>

                <View
                    android:id="@+id/divider10"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#73646464"
                    android:minWidth="500dp"
                    android:padding="80dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:minHeight="150dp">


                <MultiAutoCompleteTextView
                    android:id="@+id/news_content_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/SubmitInformationMainContent"
                    android:inputType="textMultiLine"
                    android:minHeight="150dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:minHeight="150dp">


                <Button
                    android:id="@+id/news_submit_bttn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:text="ثبت" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>