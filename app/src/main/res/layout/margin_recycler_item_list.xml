<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="2dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/margins_recycleview"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/MarginActivityDescriptionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:text="@string/MarginsActivityِDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:minHeight="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/MarginActivityRememberDateTxt"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_weight="0.22"
                    android:gravity="center|right"
                    android:text="@string/MarginsActivityRememberDate" />

                <TextView
                    android:id="@+id/MarginActivityFirstnameLastnameTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_weight="0.2"
                    android:gravity="center|right"
                    android:text="@string/MarginsActivityّFirstnameLastname" />

<!--                <TextView-->
<!--                    android:id="@+id/MarginActivityRowNumberTxt"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center|right"-->
<!--                    android:layout_weight="0.08"-->
<!--                    android:ems="10"-->
<!--                    android:gravity="center|right"-->
<!--                    android:inputType="textPersonName"-->
<!--                    android:text="@string/MarginsActivityRowNumber" />-->

            </LinearLayout>

        </LinearLayout>





    </LinearLayout>
</androidx.cardview.widget.CardView>